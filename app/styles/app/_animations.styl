[ripple], [reveal]
  position relative
  font-family 'Roboto', sans-serif
  font-size 20px
  padding 4px 12px
  overflow hidden
  border 0
  outline 0
  background 0
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  -o-user-select none
  user-select none

  -webkit-transition box-shadow .2s
  -moz-transition box-shadow .2s
  -ms-transition box-shadow .2s
  -o-transition box-shadow .2s
  transition box-shadow .2s
  & .touch
      background gray
      pointer-events none
      border-radius 100%


/* form starting stylings ------------------------------- */
  .group
    position relative
    margin-bottom 45px

  input
    font-size 18px
    padding 10px 10px 10px 5px
    display block
    width 300px
    border none
    border-bottom 1px solid silver

  input:focus
    outline none

  /* LABEL ======================================= */
  label
    color #999
    font-size 18px
    font-weight normal
    position absolute
    pointer-events none
    left 5px
    top 10px
    transition 0.2s ease all
    -moz-transition 0.2s ease all
    -webkit-transition 0.2s ease all


  /* active state */
  input:focus ~ label, input.ng-dirty ~ label
    top -20px
    font-size 14px
    color primary


  input.ng-invalid.ng-dirty ~ label
    color red
  input.ng-invalid.ng-dirty ~ span.bar:before, input.ng-invalid.ng-dirty ~ span.bar:after
    background red

  /* BOTTOM BARS ================================= */
  .bar
    position relative
    display block
    width 300px
  &:before, .bar:after
    content ''
    height 2px
    width 0
    bottom 1px
    position absolute
    background primary
    transition 0.2s ease all
    -moz-transition 0.2s ease all
    -webkit-transition 0.2s ease all
  &:before
    left 50%
  &:after
    right 50%


  /* active state */
  input:focus ~ .bar:before, input:focus ~ .bar:after
    width 50%


  /* HIGHLIGHTER ================================== */
  .highlight
    position absolute
    height 60%
    width 100px
    top 25%
    left 0
    pointer-events none
    opacity 0.5


  /* active state */
  input:focus ~ .highlight
    -webkit-animation inputHighlighter 0.3s ease
    -moz-animation inputHighlighter 0.3s ease
    animation inputHighlighter 0.3s ease

@css {

  /* ANIMATIONS ================ */
  @-webkit-keyframes inputHighlighter {
    from { background:#5264AE; }
    to  { width:0; background:transparent; }
  }
  @-moz-keyframes inputHighlighter {
    from { background:#5264AE; }
    to  { width:0; background:transparent; }
  }
  @keyframes inputHighlighter {
    from { background:#5264AE; }
    to  { width:0; background:transparent; }
  }

}

