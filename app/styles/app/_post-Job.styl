// .job-form .group input, .job-form .group .bar for paper-input
.job-form
  background-color white
  border-radius 3px
  height 600px
  width 700px
  shadow(1)
  & form .group input:first-child
    // width 100%
    &:focus ~ label
      top -5px
     &.ng-dirty ~ label
      top -5px
  & form .group .bar
    // width 100%
  & div
    padding 10px
    & textarea
      width 100%
      // border none
      outline none
      resize none
      height 300px


